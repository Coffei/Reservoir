!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Reservoir"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")


  
  %body{@spy? {"data-spy" => "scroll", "data-target" => "#sidebar" } : {}}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Reservoir
          .container.nav-collapse
            %ul.nav
              %li.dropdown{class: active_class(rooms_path)}
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"} 
                  Rooms
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to content_tag(:i, "", class: "icon-list") + "All rooms", rooms_path
                  %li.divider
                  %li{class: active_class(new_room_path)}= link_to content_tag(:i, "", class: "icon-plus") + "Add new room", new_room_path
                
              %li{class: active_class("#bbb")}= link_to "Link 2", "#bbb"
              %li{class: active_class("#ccc")}= link_to "Link 3", "#ccc"
            
            -if user_signed_in?
              .pull-right.btn-group
                %button.btn.btn-primary
                  %span.icon-user
                  %span.login= current_user.login
                %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown"}
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to content_tag(:span, "", class: "icon-list") + "Reservations", "/"
                  %li.divider
                  %li= link_to content_tag(:span, "", class: "icon-off") + "Log out", destroy_user_session_path, method: :delete
                    
             
              
            -else
              = form_for("user", url: user_session_path, html: {class: "navbar-search pull-right form-inline"}) do |f|
                = f.text_field :login, class: "input-small", placeholder: "Login"
                = f.password_field :password, class: "input-small", placeholder: "Password"
                = f.check_box :remember_me
                = f.label :remember_me, class: "checkbox"
                = f.submit "Log in", class: "btn"
                = link_to "Register", '/register', class: "btn"
                
                
                
            
    .container

      .row
        .span10
          = bootstrap_flash
          = yield
        .span2
          -if @sidelinks
            .well.affix#sidebar
              %ul.nav.nav-list
                -if @sidelinks[:header]
                  %li.nav-header= @sidelinks[:header]
                -@sidelinks.each_pair do |name, link|
                  -next if name == :header
                  %li{class: active_class(link)}=link_to name, link
                
                
               
           
           
    
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
