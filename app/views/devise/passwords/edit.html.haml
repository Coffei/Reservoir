-@width = "350"

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-signin form-horizontal" }) do |f|
  .page-header
    %h3 Change your password
  
  -if resource && resource.errors.any?
    .alert.alert-error.fade.in
      %strong Some #{resource.errors.size==1? "error" : "errors"} occured:
      %ul
        -resource.errors.each do |key|
          -unless resource.errors[key][0].empty?
            %li= "#{readable(key)} - #{resource.errors[key][0]}"
            
          
        
  
  = f.hidden_field :reset_password_token
  .control-group
    = f.label :password, class: "control-label"
    .controls
      = f.password_field :password, placeholder: "password"
    
  .control-group
    = f.label :password_confirmation, class: "control-label"
    .controls
      = f.password_field :password_confirmation, placeholder: "password confirmation"
  
  .form-actions
    = f.submit "Change!", class: "btn btn-primary"
    
    %br
    = render "devise/shared/links"
