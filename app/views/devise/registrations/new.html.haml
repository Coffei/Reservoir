- @width = "350" 

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin form-horizontal"}) do |f|
  = bootstrap_flash
  -if resource.errors.any?
    -resource.errors.each do |where, msg|
      -next if msg.empty?
      .alert.alert-error.fade.in
        Error in #{readable(where)}: #{msg}
        
        
  %h2.form-signin-heading Register
  .control-group
    = f.label :login, class: "control-label"
    .controls
      = f.text_field :login, class: '', placeholder: "Login or nick"
  .control-group
    = f.label :name, class: "control-label"
    .controls
      = f.text_field :name, class: 'text_field', placeholder: "Name"
  .control-group
    = f.label :email, class: "control-label"
    .controls
      = f.email_field :email, class: 'text_field', placeholder: "Email"
  .control-group
    = f.label :password, class: "control-label"
    .controls
      = f.password_field :password, class: 'text_field', placeholder: "Password"
  .control-group
    = f.label :password_confirmation, class: "control-label"
    .controls
      = f.password_field :password_confirmation, class: 'text_field', placeholder: "Password once again"
  .form-actions
    = f.submit "Register", class: "btn btn-large btn-primary"
      
      
    %br  
    = render "devise/shared/links"
      
  
