-@width = "350"

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "form-signin form-horizontal"}) do |f|
  = bootstrap_flash
  -if resource.errors.any?
    -resource.errors.each do |where, msg|
      -next if msg.empty?
      .alert.alert-error.fade.in
        Error in #{readable(where)}: #{msg}
  .page-header 
    %h2 User #{resource.login}
  
  .control-group
    = f.label :login, class: "control-label"
    .controls
      = f.text_field :login, placeholder: "login"
  .control-group 
    = f.label :name, class: "control-label"
    .controls
      = f.text_field :name, placeholder: "name"
  .control-group
    = f.label :email, class: "control-label"
    .controls
      = f.email_field :email, placeholder: "email"
      
  .form-actions
    = f.submit "Update", class: "btn btn-primary"
    = link_to "Back", :back, class: "btn"
    
    %div{style: "margin-top: 15px; margin-bottom: 0px;"}
      =link_to glyph("remove") + " Delete this account", user_registration_path, method: "delete", confirm: "Are you sure?", class: "btn btn-danger"
    
    = link_to "Change my password", user_password_change_path
